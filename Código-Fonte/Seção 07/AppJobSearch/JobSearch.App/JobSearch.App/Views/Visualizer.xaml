                    <Label Style="{StaticResource TitlePrimary}" Text="Descrição do trabalho" />
                    <Label  Style="{StaticResource TextPrimary}" Text="Implementar novas tecnologias de gerenciamento de servidores, fazer integração com ferramentas de VM." />
                    <Label Style="{StaticResource TitlePrimary}" Text="Benefícios" />
                    <Label  Style="{StaticResource TextPrimary}" Text="Vale transporte Vale alimentação" />
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>